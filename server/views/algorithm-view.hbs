<div id="algorithm-detail" data-algorithm="{{slug}}">

  <div class="mb-6">
    <h2 class="text-2xl font-bold text-white">{{name}}</h2>
    <p class="text-dusk-30 text-sm mt-1">{{description}}</p>
    <div class="mt-2 flex gap-2 flex-wrap">
      <span class="text-xs bg-violet-09/20 text-violet px-2 py-1 rounded font-mono">{{redisType}}</span>
      <span class="text-xs bg-dusk text-dusk-30 px-2 py-1 rounded font-mono">{{commands}}</span>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">

    <div class="lg:col-span-2 border border-dusk rounded-[5px] p-6 flex items-center justify-center">
      <div id="viz-container" class="w-full"></div>
    </div>

    <div class="space-y-4">

      <div class="border border-dusk rounded-[5px] p-4">
        <h3 class="text-xs font-semibold text-dusk-50 uppercase tracking-wider mb-3">Configuration</h3>
        <form id="config-form">
          {{#each configFields}}
          <div class="mb-3 last:mb-0">
            <label class="block text-xs text-dusk-50 mb-1 font-mono">{{this.label}}</label>
            <input
              type="number"
              name="{{this.name}}"
              value="{{this.default}}"
              min="{{this.min}}"
              max="{{this.max}}"
              step="{{this.step}}"
              class="w-full bg-midnight border border-dusk rounded-[5px] px-3 py-2 text-white text-sm font-mono focus:border-volt focus:outline-none transition-colors"
            />
          </div>
          {{/each}}
        </form>
      </div>

      <div class="border border-dusk rounded-[5px] p-4">
        <h3 class="text-xs font-semibold text-dusk-50 uppercase tracking-wider mb-3">Actions</h3>
        <button
          onclick="App.sendRequest()"
          class="w-full px-4 py-2.5 text-sm font-medium rounded-[5px] border bg-hyper-10 border-hyper-05 text-white hover:bg-hyper-09 transition-colors cursor-pointer mb-2"
        >
          Send Request
        </button>
        <div class="flex gap-2 mb-2">
          <input
            type="number"
            id="burst-count"
            value="5"
            min="1"
            max="50"
            step="1"
            class="w-20 bg-midnight border border-dusk rounded-[5px] px-3 py-2 text-white text-sm font-mono focus:border-volt focus:outline-none transition-colors"
          />
          <button
            onclick="App.sendBurst()"
            class="flex-1 px-4 py-2.5 text-sm font-medium rounded-[5px] border bg-dusk border-dusk-90 text-white hover:bg-dusk-90 hover:border-dusk-70 transition-colors cursor-pointer"
          >
            Send Burst
          </button>
        </div>
        <button
          onclick="App.resetAlgorithm()"
          class="w-full px-4 py-2 text-xs font-medium rounded-[5px] border border-dusk text-dusk-50 hover:text-white hover:border-dusk-70 transition-colors cursor-pointer"
        >
          Reset Counters
        </button>
      </div>

      <div class="border border-dusk rounded-[5px] p-4">
        <h3 class="text-xs font-semibold text-dusk-50 uppercase tracking-wider mb-2">Request Log</h3>
        <div id="result-log" class="h-28 overflow-y-auto">
          <p id="result-log-empty" class="text-dusk-70 text-xs">No requests yet</p>
        </div>
      </div>

    </div>
  </div>
</div>

<script>
  if (window.App) {
    window.App.init('{{{slug}}}', {{{configJson}}});
  }
</script>
