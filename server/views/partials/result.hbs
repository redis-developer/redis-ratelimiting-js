{{#each results}}
<div class="mb-2 last:mb-0">
  <div class="flex items-center justify-between mb-1">
    {{#if allowed}}
      <span class="inline-flex items-center gap-1 text-sm font-medium text-volt">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
        Allowed
      </span>
    {{else}}
      <span class="inline-flex items-center gap-1 text-sm font-medium text-redis-red">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/></svg>
        Denied
      </span>
    {{/if}}
    <span class="text-xs text-dusk-50 font-mono">{{remaining}} / {{limit}} remaining</span>
  </div>
  <div class="w-full bg-dusk rounded-full h-2">
    <div
      class="h-2 rounded-full transition-all duration-300 {{#if (gt percent 50)}}bg-volt{{else if (gt percent 20)}}bg-violet{{else}}bg-redis-red{{/if}}"
      style="width: {{percent}}%"
    ></div>
  </div>
  {{#if retryAfter}}
    <p class="text-xs text-dusk-50 mt-1">Retry after {{retryAfter}}s</p>
  {{/if}}
</div>
{{/each}}
