  <style>
    body { text-rendering: optimizeLegibility; -webkit-font-smoothing: antialiased; }

    .algo-card.active {
      border-color: #DCFF1E;
      background: #0D212C;
    }

    @keyframes slot-pop {
      0% { transform: scale(1); }
      50% { transform: scale(1.25); }
      100% { transform: scale(1); }
    }
    .slot-pop { animation: slot-pop 0.25s ease-out; }

    @keyframes token-consume {
      0% { transform: scale(1); opacity: 1; }
      100% { transform: scale(0) translateY(-20px); opacity: 0; }
    }
    .token-consume { animation: token-consume 0.3s ease-in forwards; }

    @keyframes token-appear {
      0% { transform: scale(0); opacity: 0; }
      100% { transform: scale(1); opacity: 1; }
    }
    .token-appear { animation: token-appear 0.3s ease-out forwards; }

    @keyframes drip-fall {
      0% { transform: translateY(0); opacity: 0.8; }
      100% { transform: translateY(24px); opacity: 0; }
    }
    .drip { animation: drip-fall 1.2s ease-in infinite; }

    @keyframes dot-appear {
      0% { transform: translateY(-50%) scale(0); }
      100% { transform: translateY(-50%) scale(1); }
    }
    .dot-appear { animation: dot-appear 0.25s ease-out forwards; }

    @keyframes flash-denied {
      0%, 100% { box-shadow: none; }
      50% { box-shadow: 0 0 16px rgba(255, 68, 56, 0.5); }
    }
    .flash-denied { animation: flash-denied 0.4s ease-out; }

    .water-surface {
      background: linear-gradient(to bottom, rgba(128, 219, 255, 0.35), rgba(128, 219, 255, 0.12));
      transition: height 0.35s ease-out;
    }
    .water-surface.danger {
      background: linear-gradient(to bottom, rgba(255, 68, 56, 0.35), rgba(255, 68, 56, 0.12));
    }
  </style>
